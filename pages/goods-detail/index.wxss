/* pages/goods-detail/index.wxss */
.container{
    width: 100%;
    min-height: 100%;
    display: flex;
    background: #f2f2f2;
    flex-direction: column;
}
.swiper-container{
    width: 100%;
    height: 750rpx;
    background: #fff;
}
.swiper-box{
    height: 100%;
}
.swiper-img{
    height: 100%;
    width: 100%;
}
.goods-info{
    width: 100%;
    position: relative;
    background: #fff;
    margin-top: 10rpx;
    padding: 35rpx;
}
.goods-info .goods-title{
    font-size: 32rpx;
    margin-bottom: 35rpx;
}
.goods-info .goods-share{
    font-size: 25rpx;
    color: #CC0000;
    margin-bottom: 28rpx;
}
.goods-price{
    display: flex;
    font-size: 25rpx;
}
.price{
    color: #c00;
    width: 200rpx;
}
.num{
    width: 200rpx;
}
.goods-info-fx {
  position: absolute;
  width: 50px;
  height: 60px;
    right:70rpx;
    top:35rpx;

}

.goods-info-fx button {
  position: absolute;
  width: 50px;
  height: 60px;
  top: 0;
  left: 0;
  z-index: 2;
  opacity: 0;
}

.goods-info-fx image {
  width: 30px;
  height: 30px;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  margin: 10px 10px 0 5px;
}

.goods-info-fx text {
  position: absolute;
  bottom: 3px;
  left: 0;
  z-index: 1;
  font-size: 10px;
  text-align: center;
}